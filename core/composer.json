{
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2.27",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "roave/security-advisories": "dev-master",
    "akrabat/ip-address-middleware": "^1.0",
    "fenom/fenom": "^2.11",
    "hybridauth/hybridauth": "^3.0",
    "monolog/monolog": "^1.24",
    "paypal/rest-api-sdk-php": "^1.14",
    "pelago/emogrifier": "^3.1",
    "peppeocchi/php-cron-scheduler": "^3.0",
    "phpmailer/phpmailer": "^6.0",
    "stadline/monolog-echo-handler": "^0.2.0",
    "vesp/core": "^1.0",
    "vimeo/vimeo-api": "^2.0"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "brianium/paratest": "^4.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/php-invoker": "^2.0",
    "phpunit/phpunit": "^8.5",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "platform": {
      "php": "7.2.27"
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "prestissimo": {
      "maxConnections": 6,
      "minConnections": 3
    },
    "sort-packages": true
  },
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/paratest --configuration ./phpunit.xml",
    "test:text": "vendor/bin/paratest --configuration ./phpunit.xml --coverage-text",
    "test:html": "vendor/bin/paratest --configuration ./phpunit.xml --coverage-html=report",
    "fix:codestyle": "vendor/bin/phpcbf",
    "style:phpcs": "vendor/bin/phpcs"
  },
  "scripts-descriptions": {
    "test": "Прогнать phpunit тесты",
    "test:text": "Подготовить отчет в текстовом виде о покрытии кода тестами",
    "test:html": "Подготовить отчет в html виде о покрытии кода тестами",
    "fix:codestyle": "Исправить кодстайл в PHP файлах",
    "style:phpcs": "Проверить стилистику кода через PHP CodeSniffer"
  }
}
